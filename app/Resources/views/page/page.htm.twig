{% extends 'base.htm.twig' %}
{% block title %}{{ page }}{% endblock %}
  {% block breadcrumb %}
      <li class="rsmItem sfBreadcrumbNavigation">
          <div class="rsmTemplate">
              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i0_hypBreabcrumb" href="{{ path('homepage') }}">Home</a>

          </div>
          <span class="sfBreadcrumbNodeSeparator"></span></li>
      <li class="rsmItem sfNoBreadcrumbNavigation select">
          <div class="rsmTemplate">

              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i1_hypBreabcrumb">{{ page.title }}</a>

          </div>
      </li>
  {% endblock %}
{% block banner %}{% endblock %}
{% block body %}
    <style>
        .bread-crumb-control{
            margin-top: 75px;
        }
    </style>
    <h1>{{ page.title }}</h1>

    <div class="sfContentBlock">
        <div class="prominent-text">
            {{ page.content | raw }}</div>


    </div>
    <div class="sfNavWrp sfNavHorizontalWrp ">

        <div class="portal">
            {% for subpage in subpages %}
                <div class="portal-item col-sm-4">
                    <div class="portal-item-border border-none">

                        <img class="max-width" title="{{ subpage.title }}"
                             alt="{{ subpage.title }}"
                             src="{{ asset('images/products/') }}{{ subpage.imageName }}">


                        <div class="description" style="height: 121px; max-height: none; ">
                            <h2 class="portal-title-size">{{ subpage.title }}</h2>
                            <p> {{ subpage.intro | raw }}</p>
                        </div>
                        <a href="{{ path('view-subpage', {'pageSlug': page.slug, 'slug': subpage.slug}) }}"
                           class="btn btn-md pull-right green-theme-button">VIEW</a>


                    </div>
                    <div class="drop-shadow"></div>

                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}