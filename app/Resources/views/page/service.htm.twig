{% extends 'base.htm.twig' %}
{% block javascript %}

{% endblock %}
{% block title %}{{ service.title }}{% endblock %}
 {% block banner %}
     <style>
         .banner-margin-inner{
             margin-top:90px;
         }
     </style>

 {% endblock %}
{% block breadcrumb %}
      <li class="rsmItem sfBreadcrumbNavigation">
          <div class="rsmTemplate">
              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i0_hypBreabcrumb"
                 href="{{ path('homepage') }}">Home</a>

          </div>
          <span class="sfBreadcrumbNodeSeparator"></span></li>
      <li class="rsmItem sfBreadcrumbNavigation">
      <div class="rsmTemplate">

          <a href="{{ path('services') }}" id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i1_hypBreabcrumb">Services</a>

      </div>
  </li>
      <span class="sfBreadcrumbNodeSeparator"></span></li>
      <li class="rsmItem sfNoBreadcrumbNavigation select">
          <div class="rsmTemplate">

              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i1_hypBreabcrumb">{{ service.title }}</a>

          </div>
      </li>
  {% endblock %}
{% block body %}

    <h1>{{ service.title }}</h1>
    <div class="sfContentBlock">
        <img style="width:100%" src="{{ asset('images/products/') }}{{ service.imageName }}"/><br/><br/>
        <div class="prominent-text">

            {{ service.content | raw }}<br/>
            {{ service.footer | raw }}
        </div>


    </div>

    <div class="sfNavWrp sfNavHorizontalWrp ">

        <div class="portal">
          {% for scheme in service.mySchemes %}

            <a href="{{ path('scheme', {'serviceSlug': scheme.service.slug, 'slug': scheme.scheme.slug }) }}"
               class="">
              <div class="portal-item col-sm-6">
                <div class="portal-item-border border-none">

                    <div class="description" style="min-height: 0px; max-height: none; height: 71px;">
                        <h2 class="portal-title-size">{{ scheme.scheme.title }}</h2>
                        <p>{{ scheme.scheme.summary }}</p>
                    </div>

                </div>
                <div class="drop-shadow"></div>

            </div>
            </a>
           {% endfor %}
        </div>
    </div>

{% endblock %}