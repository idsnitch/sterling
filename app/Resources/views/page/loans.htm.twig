{% block body %}
    <style>
        .bread-crumb-control{
            margin-top: 75px;
        }
    </style>
    <!-- Left column Ends -->
    <!-- Middle column  -->
    <div class="col-lg-8 col-sm-8 col-xs-12">
        <div class="main-content">
            <h1>Loans for Shares</h1>
            <img src="/images/products/5b351bca042eb.jpg"/>
            <div class="contact-area">
                <div class="container">

                    <div class="col-md-offset-1 col-md-6 mainsectionate">

                        <div class="sectionate">
                            <h4>Use the form below to request for a Loan for Shares</h4>
                            <br>
                            {{ form_start(form) }}
                                <div class="form-group">
                                   {{ form_row(form.fullName,{'attr':{'class':'form-control'}})  }}
                                </div>

                                <div class="form-group">
                                    {{ form_row(form.emailAddress,{'attr':{'class':'form-control'}})  }}
                                </div>


                                <div class="form-group">
                                    {{ form_row(form.phoneNumber,{'attr':{'class':'form-control'}})  }}
                                </div>


                                <button type="submit" class="btn btn-md pull-right green-theme-button">Submit</button>
                            {{ form_end(form) }}
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- Middle column Ends -->


{% endblock %}