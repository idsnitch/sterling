{% extends 'base.htm.twig' %}
{% block title %}{{ category }} - Research{% endblock %}
  {% block breadcrumb %}
      <li class="rsmItem sfBreadcrumbNavigation">
          <div class="rsmTemplate">
              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i0_hypBreabcrumb" href="{{ path('homepage') }}">Home</a>

          </div>
          <span class="sfBreadcrumbNodeSeparator"></span></li>
      <li class="rsmItem sfNoBreadcrumbNavigation">
          <div class="rsmTemplate">

              <a href="{{ path('view-page', {'slug': 'research'}) }}" id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i1_hypBreabcrumb">Research</a>

          </div>
          <span class="sfBreadcrumbNodeSeparator"></span>

      </li>
      <li class="rsmItem sfNoBreadcrumbNavigation select">
          <div class="rsmTemplate">

              <a id="ctl00_cphBreadCrumb_T84CFA523010_ctl00_ctl00_Breadcrumb_i1_hypBreabcrumb" style="text-transform: capitalize">{{ category }}</a>

          </div>
          <span class="sfBreadcrumbNodeSeparator"></span>

      </li>
  {% endblock %}
{% block banner %}{% endblock %}
{% block body %}
    <style>
        .bread-crumb-control{
            margin-top: 75px;
        }
    </style>
    <h1 style="text-transform: capitalize">{{ category }}</h1>

<br/>
    <div class="sfNavWrp sfNavHorizontalWrp ">

        <div class="portal">
            {% for report in reports %}
                    <div class="portal-item col-sm-12">
                        <div class="portal-item-border border-none">

                        <table>
                            <tr>
                                <td>
                                    {{ report.createdAt | date("l F jS Y") }} -
                                </td>
                                        <td colspan="2">
                                            {{ report.title }}&nbsp;&nbsp;
                                        </td>
                                <td>
                                    <a href="{{ asset('images/products/') }}{{ report.imageName }}">Download Report</a>
                                </td>
                            </tr>
                        </table>
                        </div>

                    </div>

            {% endfor %}
            {{ knp_pagination_render(reports) }}
        </div>
    </div>

{% endblock %}