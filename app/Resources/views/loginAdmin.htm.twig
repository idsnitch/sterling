<body class="login">


<header class="page-header">
    <div id="menu_bar">
        <div id="nav_inner">
            <div id="logo">
                <a href="/"><img style="width: 200px;margin-left: -37px" src="{{ asset('logo.png') }}"></a>
            </div>
        </div>
    </div>
</header>

<section class="main">

    <div class="content_wrapper">
        <div class="inner_wrapper">
            <div class="body-wrapper ">
                <article>
                    <div class="article_inner">
                        <div class="form form-wrap">
                            {{ form_start(loginForm) }}

                            {% if error %}
                                <div class="alert alert-danger" style="display: block">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="column">

                                <div class="form-row form-field-login_form_credentials_username ">
                                    <div class="form-label">
                                        <label for="login_form_credentials_username"
                                               class="required">Username</label>

                                    </div>
                                    <div class="form-widget">
                                        {{ form_row(loginForm._username, { 'attr': {'id': 'login_form_credentials_username'} }) }}
                                    </div>
                                    <div class="form-errors"></div>
                                </div>

                                <div class="form-row form-field-login_form_credentials_password ">
                                    <div class="form-label">
                                        <label for="login_form_credentials_password"
                                                                   class="required">Password</label>
                                    </div>
                                    <div class="form-widget">
                                        {{ form_row(loginForm._password, { 'attr': {'id': 'login_form_credentials_password'} }) }}
                                    </div>
                                    <div class="form-errors"></div>
                                </div>


                            </div>
                            <input type="hidden" name="_target_path" value="admin-home"/>
                            <input type="hidden" name="_failure_path" value="admin-login"/>
                            <div class="button-row">
                                <input id="login_form__submit" type="submit" value="Sign in">
                                <a href="{{ path('forgot-password') }}" id="restore">
                                    Forgot your password? </a>

                            </div>
                            {{ form_end(loginForm) }}
                        </div>
                        <div class="signup-wrap">
                            <a href="{{ path('request-admin-account') }}" id="register">
                                Don't have an account? <span>Request One</span>
                            </a>
                        </div>
                    </div>
                </article>
            </div>  <!-- div.body-wrapper -->
        </div> <!-- div.inner_wrapper -->
    </div> <!-- div.content_wrapper -->
</section> <!-- section.main -->


